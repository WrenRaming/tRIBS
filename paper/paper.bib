\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/eco.26},
	keywords = {mountain hydrology, red, scattered shortwave radiation, single-layer snow model, snow-vegetation interactions, topographic sheltering},
	pages = {253--270},
	file = {Rinehart et al_2008_Effects of vegetation, albedo, and solar radiation sheltering on the.pdf:/Users/lraming/Library/CloudStorage/GoogleDrive-wren.raming@gmail.com/My Drive/Work/Zotero/2008/Ecohydrology/Rinehart et al_2008_Effects of vegetation, albedo, and solar radiation sheltering on the.pdf:application/pdf;Snapshot:/Users/lraming/Zotero/storage/MCCICPEX/eco.html:text/html},
