	month = oct,
	year = {2001},
	note = {196 citations (Crossref) [2023-03-30]},
	keywords = {Erosion, Geomorphology, priority, Runoff, Triangulation},
	pages = {959--973},
	file = {ScienceDirect Snapshot:/Users/lraming/Zotero/storage/DD7RLXFR/S0098300400001345.html:text/html;Tucker et al_2001_An object-oriented framework for distributed hydrologic and geomorphic modeling.pdf:/Users/lraming/Library/CloudStorage/GoogleDrive-wren.raming@gmail.com/My Drive/Work/Zotero/2001/Computers & Geosciences/Tucker et al_2001_An object-oriented framework for distributed hydrologic and geomorphic modeling.pdf:application/pdf},
