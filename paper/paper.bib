	keywords = {distributed hydrologic modeling, dryland ecohydrology, groundwater recharge, hillslope-channel systems, hydrologic connectivity, infiltration losses},
	pages = {4498--4518},
	file = {Schreiner-McGraw_Vivoni_2018_On the Sensitivity of Hillslope Runoff and Channel Transmission Losses in Arid.pdf:/Users/lraming/Library/CloudStorage/GoogleDrive-wren.raming@gmail.com/My Drive/Work/Zotero/2018/Water Resources Research/Schreiner-McGraw_Vivoni_2018_On the Sensitivity of Hillslope Runoff and Channel Transmission Losses in Arid.pdf:application/pdf;Snapshot:/Users/lraming/Zotero/storage/2JZAMM7L/2018wr022842.html:text/html},
