\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/2011WR010384},
	keywords = {distributed hydrologic model, ecohydrology, hillslope hydrology, North American monsoon, red, spatial patterns, threshold behavior},
	file = {Mahmood_Vivoni_2011_A climate-induced threshold in hydrologic response in a semiarid ponderosa pine.pdf:/Users/lraming/Library/CloudStorage/GoogleDrive-wren.raming@gmail.com/My Drive/Work/Zotero/2011/Water Resources Research/Mahmood_Vivoni_2011_A climate-induced threshold in hydrologic response in a semiarid ponderosa pine.pdf:application/pdf;Snapshot:/Users/lraming/Zotero/storage/9GKC9H2L/2011WR010384.html:text/html},
}

